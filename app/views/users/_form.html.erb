<div class="container">
<div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      
      <div class="form-group row form-label">
        <%= f.label :email,class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, rows:10, class: "form-control shadow rounded",placeholder: "Enter your email id" %>
          </div>
      </div>

      <div class="form-group row form-label">
        <%= f.label :Password,class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center form-label">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg")%>
      </div>
        <% end %>
      </div>
      <%= link_to 'Cancel and return to articles listing',articles_path, class: "btn btn-success"  %>
      </div>
</div>